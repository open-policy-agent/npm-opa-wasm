{
  "name": "@open-policy-agent/opa-wasm",
  "version": "1.5.0",
  "description": "Open Policy Agent WebAssembly SDK",
  "files": [
    "capabilities.json",
    "src",
    "dist",
    "types"
  ],
  "main": "src/opa.js",
  "types": "types/opa.d.ts",
  "scripts": {
    "build:browser": "esbuild src/opa.js --outfile=dist/opa-wasm-browser.esm.js --bundle --sourcemap --minify --format=esm --define:global=window --out-extension:.js=.esm.js",
    "lint": "git ls-files | xargs deno lint",
    "fmt:check": "git ls-files | xargs deno fmt --check",
    "fmt": "git ls-files | xargs deno fmt",
    "test": "jest --verbose",
    "types": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-policy-agent/npm-opa-wasm.git"
  },
  "keywords": [
    "opa",
    "wasm",
    "policy"
  ],
  "author": "patrick@styra.com",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/open-policy-agent/npm-opa-wasm/issues"
  },
  "homepage": "https://github.com/open-policy-agent/npm-opa-wasm#readme",
  "devDependencies": {
    "esbuild": "^0.14.5",
    "jest": "^27.2.4",
    "puppeteer": "^13.0.0",
    "semver": "^7.3.5",
    "smart-deep-sort": "^1.0.2",
    "tmp": "^0.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "sprintf-js": "^1.1.2",
    "yaml": "^1.10.2"
  },
  "browser": {
    "//": "This ensures that the util module isn't bundled in browsers",
    "util": false,
    "src/opa.js": "dist/opa-wasm-browser.esm.js"
  }
}
